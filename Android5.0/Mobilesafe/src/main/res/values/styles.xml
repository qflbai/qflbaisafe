<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- actionBar颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色，会被statusBarColor效果覆盖-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 控件默认颜色 ，效果会被colorControlActivated取代  -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">#FF0F9F5F</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="mydec">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="nextBtn">
        <item name="android:onClick">nextPage</item>
        <item name="android:text">@string/nextPage</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="preBtn">
        <item name="android:onClick">prePage</item>
        <item name="android:text">上一页</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="mydesAndimage">
        <item name="android:drawableLeft">@android:drawable/star_big_on</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
