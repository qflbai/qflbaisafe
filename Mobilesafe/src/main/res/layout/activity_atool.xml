<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_atool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/myTitleStyle"
        android:text="@string/aToolActivity_Title"/>

    <TextView
        android:id="@+id/tv_aToolActivity_Address"
        style="@style/myAtool"
        android:text="归属地查询"
        />

    <TextView
        android:id="@+id/tv_aToolActivity_backup"
        style="@style/myAtool"
        android:text="短信备份"
        />

    <TextView
        android:id="@+id/tv_aToolActivity_restoresms"
        style="@style/myAtool"
        android:text="短信还原"
        />
    <TextView
        android:id="@+id/tv_commonnumber_query"
        style="@style/myAtool"
        android:text="常用号码查询"
        />

    <TextView
        android:id="@+id/tv_applock"
        style="@style/myAtool"
        android:text="程序锁"
        />
</LinearLayout>
