<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_query_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/myTitleStyle"
        android:text="@string/query_Address_Activity_title"/>

    <EditText
        android:id="@+id/et_input_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/action_pink"
        android:hint="请输入要查询的电话号码!"
        android:inputType="phone"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btn_query_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"
        android:textSize="16sp"/>

    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/tv_query_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
