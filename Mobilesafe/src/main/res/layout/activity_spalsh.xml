<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_SpalshActivity_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spalsh">

    <TextView
        android:elevation="4dp"
        android:translationZ="4dp"
        android:id="@+id/tv_SpalshActivity_versionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:shadowColor="#ff00fb"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/spalshActivity_text"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_SpalshActivity"
        android:layout_below="@+id/tv_SpalshActivity_versionName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
